<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.example.james.foodapp.FoodActivity">

    <EditText
        android:id="@+id/editTextFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Feed me"
        android:textColor="@color/colorPrimaryLight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/enter"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yum"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorPrimaryLight"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/editTextFood"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.034"
        android:layout_toRightOf="@+id/editTextFood"
        android:layout_alignParentTop="true" />
    <Button
        android:id="@+id/newgoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Goal"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorPrimaryLight"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.034"
        android:layout_alignBaseline="@+id/enter"
        android:layout_alignBottom="@+id/enter"
        android:layout_toEndOf="@+id/enter"
        android:layout_toRightOf="@+id/enter" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/editTextFood"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />




</RelativeLayout>
